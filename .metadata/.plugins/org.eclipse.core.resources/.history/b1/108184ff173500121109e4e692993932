package ca.viaware.rpg.game;

import org.lwjgl.opengl.*;

import ca.viaware.rpg.map.Loader;
import ca.viaware.rpg.map.Map;
import static org.lwjgl.opengl.GL11.*;

public class Renderer {
	Loader loader = new Loader();
	Map map = loader.loadMap();

	public void render() {
		switch (Globals.gameState) {
		case INTRO:
			System.out.println("Rendering intro");
			//glTexCoord2f(0f,0f);
			//GL11.glRecti(0, 0, Globals.dispWidth, Globals.dispHeight);
			Globals.gameState = Globals.gState.GAME;
			break;
		case MAIN_MENU:
			new Menu();
			break;
		case GAME:
			map.renderMap();
			break;
		}
	}
}
