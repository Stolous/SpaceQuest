package ca.viaware.rpg.game;

import org.lwjgl.Sys;
import org.lwjgl.input.Keyboard;
import org.lwjgl.opengl.Display;

import ca.viaware.rpg.map.Loader;
import ca.viaware.rpg.map.Map;
import ca.viaware.rpg.resources.TextureHandler;
import ca.viaware.rpg.utilities.TextRenderer;

public class GameLoop {
private long lasttime = 0;
	public void startLoop() {
		Renderer render = new Renderer();
		
		setupTextures();
		
		while (Globals.isRunning) {
			TextRenderer r = new TextRenderer(10,100, 100, 0, "res/text/fonts.png", "");
			r.update();
			
			int delta = getDelta();
			
			render.render();
			
			Display.update();
			Display.sync(60);
			
			if (Keyboard.isKeyDown(Keyboard.KEY_ESCAPE)) {
				Globals.isRunning = false;
			}
			if (Display.isCloseRequested()) {
				Globals.isRunning = false;
			}
			
		}
		Display.destroy();
	}

	private void setupTextures(){
		TextureHandler th = new TextureHandler();
		Globals.tileTextures.add(th.loadTexture("grass1"));
		Globals.tileTextures.add(th.loadTexture("grass2"));
	}
	
	public int getDelta(){
		long time = getTime();
		int delta = (int) (time - lasttime);
		lasttime = time;
		
		return delta;
	}
	
	private long getTime(){
		return (Sys.getTime() * 1000 / Sys.getTimerResolution());
	}
}
